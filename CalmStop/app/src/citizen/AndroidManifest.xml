<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.policestrategies.calm_stop">

    <application
        android:name=".citizen.ProximityApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".citizen.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".citizen.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".citizen.SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".citizen.UploadActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".citizen.DocumentsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".citizen.HomepageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".citizen.ProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".citizen.ProfileDisplayActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".citizen.PreviousStopsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".citizen.HowToUseActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".citizen.AboutUsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".citizen.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".citizen.beacon_detection.BeaconDetectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".chat.ChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".citizen.stop.StopActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".DocumentViewActivity"/>

        <activity
            android:name=".citizen.Survey.SurveyActivity"
            android:label="@string/title_activity_survey"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".citizen.Survey.AddCommentActivity"
            android:label="@string/title_activity_add_comment"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>