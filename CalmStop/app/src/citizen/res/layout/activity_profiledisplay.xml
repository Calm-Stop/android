<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:minWidth="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/title_bkgrnd2"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <Button
            android:id="@+id/EditButton"
            android:layout_width="36dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:background="@android:drawable/ic_menu_edit"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/textSize"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="109dp"
                android:layout_height="98dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/profile_drawing"
                android:layout_weight="0.03" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Personal Information"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:text="Name:"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Nametxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:text="Email:"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Emailtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:text="Phone Number:"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Phonenumtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:text="Date of Birth:"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/DOBtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/DriversLis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:text="Driver's License:"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/DriversListxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:text="Zip Code:"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Zipcodetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:text="Gender:"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Gendertxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/ethnicity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/gender"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/gender"
                android:layout_below="@+id/gender"
                android:fontFamily="monospace"
                android:text="Ethnicity:"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Ethnicitytxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/langPref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:text="Language Preference:"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/Langtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/viewDocs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/login_button"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:text="View My Documents"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>