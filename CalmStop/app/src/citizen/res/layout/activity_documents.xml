<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/licenseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:fontFamily="monospace"
            android:text="Driver's License: "
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:typeface="monospace" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/image_view_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/uploadLicense"
                android:layout_below="@id/image_view_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/sendLicense"
                android:layout_alignParentLeft="true"
                android:background="@android:color/background_light"
                android:fontFamily="monospace"
                android:text="Upload"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />

            <Button
                android:id="@+id/sendLicense"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_view_license"
                android:background="@android:color/background_light"
                android:fontFamily="monospace"
                android:text="Send"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/registrationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="monospace"
            android:text="Proof of Vehicle Registration: "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:typeface="monospace" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/image_view_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/uploadRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_view_registration"
                android:layout_toLeftOf="@+id/sendRegistration"
                android:layout_alignParentLeft="true"
                android:background="@android:color/background_light"
                android:fontFamily="monospace"
                android:text="Upload"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />
            <Button
                android:id="@+id/sendRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_view_registration"
                android:layout_alignParentRight="true"
                android:background="@android:color/background_light"
                android:fontFamily="monospace"
                android:text="Send"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/insuranceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="monospace"
            android:text="Proof of Insurance: "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:typeface="monospace" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/image_view_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/uploadInsurance"
                android:layout_below="@id/image_view_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/sendInsurance"
                android:layout_alignParentLeft="true"
                android:background="@android:color/background_light"
                android:fontFamily="monospace"
                android:text="Upload"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />
            <Button
                android:layout_below="@id/image_view_insurance"
                android:id="@+id/sendInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/background_light"
                android:fontFamily="monospace"
                android:text="Send"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/textSize"
                android:typeface="monospace" />
        </RelativeLayout>
        <Button
            android:id="@+id/sendAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:fontFamily="monospace"
            android:text="Send All"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/textSize"
            android:typeface="monospace" />
    </LinearLayout>

</ScrollView>