<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/beacon_status"
        layout="@layout/card_view_beacon_status" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/beacon_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/beacon_status"
        android:clickable="true" />

    <Button
        android:id="@+id/button_scan_beacon_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:text="Scan for Beacons" />

</RelativeLayout>