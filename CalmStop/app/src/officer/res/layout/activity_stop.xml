<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/stop_officer_citizen_profile_picture"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:paddingBottom="5dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1.5dp" />

            <TextView
                android:id="@+id/stop_citizen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/stop_officer_citizen_profile_picture"
                android:paddingBottom="2dp"
                android:paddingTop="15dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/stop_citizen_gender_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stop_citizen_name"
                android:layout_toRightOf="@+id/stop_officer_citizen_profile_picture"
                android:paddingBottom="2dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stop_citizen_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stop_citizen_gender_age"
                android:layout_toRightOf="@+id/stop_officer_citizen_profile_picture"
                android:textSize="18sp" />

        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="15dp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/stop_citizen_info_stops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/stop_citizen_info_alerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/stop_citizen_info_warnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/stop_citizen_info_threats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/stop_citizen_info_citations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/stop_citizen_info_intoxicated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/stop_citizen_info_arrests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/stop_citizen_info_weapons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/stop_request_documents_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:src="@mipmap/documents3x" />

        <ImageButton
            android:id="@+id/stop_request_call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/stop_request_documents_button"
            android:background="@null"
            android:src="@mipmap/call3x" />

        <ImageButton
            android:id="@+id/stop_request_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/stop_request_documents_button"
            android:background="@null"
            android:src="@mipmap/text3x" />

    </RelativeLayout>


</RelativeLayout>